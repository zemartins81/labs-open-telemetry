# =============================================================================
# CONFIGURAÇÕES DO SISTEMA CEP
# =============================================================================

# Weather API Configuration
# Obtenha sua chave gratuita em: https://www.weatherapi.com/
WEATHER_API_KEY=sua_chave_aqui

# Serviços - Portas
SERVICO_A_PORT=8080
SERVICO_B_PORT=8081

# URLs dos Serviços
SERVICO_A_URL=http://localhost:8080
SERVICO_B_URL=http://localhost:8081

# APIs Externas
VIACEP_API_URL=https://viacep.com.br/ws
WEATHER_API_URL=http://api.weatherapi.com/v1/current.json

# =============================================================================
# CONFIGURAÇÕES DE OBSERVABILIDADE
# =============================================================================

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_SERVICE_NAME=sistema-cep
OTEL_SERVICE_VERSION=1.0.0

# Zipkin
ZIPKIN_ENDPOINT=http://localhost:9411/api/v2/spans

# =============================================================================
# CONFIGURAÇÕES DE INFRAESTRUTURA
# =============================================================================

# OpenTelemetry Collector
OTEL_COLLECTOR_PORT_GRPC=4317
OTEL_COLLECTOR_PORT_HTTP=4318
OTEL_COLLECTOR_METRICS_PORT=8888

# Zipkin
ZIPKIN_PORT=9411

# Prometheus (Opcional)
PROMETHEUS_PORT=9090

# Grafana (Opcional)
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Redis (Opcional)
REDIS_PORT=6379

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Modo de desenvolvimento
GO_ENV=development
LOG_LEVEL=debug

# Timeouts (em segundos)
HTTP_TIMEOUT=10
API_TIMEOUT=5

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# CONFIGURAÇÕES DE DOCKER
# =============================================================================

# Compose project name
COMPOSE_PROJECT_NAME=sistema-cep

# Network
NETWORK_NAME=sistema-cep-network
